FROM node:22-alpine

WORKDIR /app

COPY frontend/package*.json ./
COPY frontend/tsconfig.json ./
COPY frontend/next.config.js ./
COPY frontend/next-env.d.ts ./
COPY frontend/app ./app
COPY frontend/public ./public

RUN npm install

EXPOSE 3000
CMD ["npm", "run", "dev", "--", "--hostname", "0.0.0.0", "--port", "3000"]
