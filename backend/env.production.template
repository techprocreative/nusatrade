# ForexAI Backend Production Environment
# Copy this file to .env and fill in the values

# ============================================
# REQUIRED - Must be set for production
# ============================================

# Database (PostgreSQL)
DATABASE_URL=postgresql://forexai:YOUR_STRONG_PASSWORD@localhost:5432/forexai

# JWT Authentication
JWT_SECRET=your-very-long-random-secret-key-min-32-characters
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Environment
ENVIRONMENT=production

# ============================================
# OPTIONAL - AI Features
# ============================================

# OpenAI (for AI Supervisor)
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_MODEL=gpt-4-turbo

# Anthropic (fallback)
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key
ANTHROPIC_MODEL=claude-3-opus-20240229

# ============================================
# OPTIONAL - Service Configuration
# ============================================

# CORS (comma-separated origins)
CORS_ORIGINS=https://forexai.com,https://www.forexai.com

# Redis (for rate limiting)
REDIS_URL=redis://localhost:6379

# Logging
LOG_LEVEL=INFO

# ============================================
# OPTIONAL - Trading Defaults
# ============================================

DEFAULT_LOT_SIZE=0.1
MAX_LOT_SIZE=10.0
MAX_OPEN_POSITIONS=10
DEFAULT_STOP_LOSS_PIPS=50
DEFAULT_TAKE_PROFIT_PIPS=100

# ============================================
# OPTIONAL - Rate Limiting
# ============================================

RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000
