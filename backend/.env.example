# ============================================
# ForexAI Backend - Environment Configuration
# ============================================
# Copy this file to .env and fill in your values

# ============================================
# APPLICATION SETTINGS
# ============================================
APP_NAME=Forex AI Backend
ENVIRONMENT=development  # development | production | staging
DEBUG=false
LOG_LEVEL=INFO  # DEBUG | INFO | WARNING | ERROR | CRITICAL

# ============================================
# DATABASE
# ============================================
# PostgreSQL connection string
# Format: postgresql+psycopg2://user:password@host:port/database
DATABASE_URL=postgresql+psycopg2://postgres:postgres@localhost:5432/forex_ai

# Redis for caching and sessions
REDIS_URL=redis://localhost:6379/0

# ============================================
# SECURITY & AUTHENTICATION
# ============================================
# IMPORTANT: Change these in production!
JWT_SECRET=your-super-secret-jwt-key-min-32-chars-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=7

# ============================================
# CORS CONFIGURATION
# ============================================
# Comma-separated list of allowed origins
# Development example:
BACKEND_CORS_ORIGINS=http://localhost:3000,http://localhost:8000
# Production example:
# BACKEND_CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# ============================================
# CELERY (Background Tasks)
# ============================================
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# ============================================
# AI/LLM PROVIDERS
# ============================================
# OpenAI (Primary)
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4-turbo-preview

# Anthropic Claude (Fallback)
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here
ANTHROPIC_MODEL=claude-3-sonnet-20240229

# ============================================
# CLOUD STORAGE (Cloudflare R2)
# ============================================
# Optional: For storing trading reports, logs, etc.
R2_ACCOUNT_ID=your-cloudflare-account-id
R2_ACCESS_KEY_ID=your-r2-access-key-id
R2_SECRET_ACCESS_KEY=your-r2-secret-access-key
R2_BUCKET_NAME=forex-ai-storage

# ============================================
# RATE LIMITING
# ============================================
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_SECONDS=60

# ============================================
# TRADING CONFIGURATION
# ============================================
MAX_LOT_SIZE=10.0
MAX_POSITIONS_PER_USER=20
DEFAULT_SLIPPAGE_PIPS=2.0

# ============================================
# WEBSOCKET SETTINGS
# ============================================
WS_HEARTBEAT_INTERVAL=30
WS_CONNECTION_TIMEOUT=60

# ============================================
# NOTES
# ============================================
# 1. Never commit .env file to version control
# 2. In production, use strong random values for JWT_SECRET
# 3. At least one AI provider (OpenAI or Anthropic) is required
# 4. Update CORS origins to match your frontend domain
