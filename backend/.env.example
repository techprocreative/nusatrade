# ============================================
# ForexAI Backend - Environment Configuration
# ============================================
# Copy this file to .env and fill in your values

# ============================================
# APPLICATION SETTINGS
# ============================================
APP_NAME=Forex AI Backend
ENVIRONMENT=development  # development | production | staging
DEBUG=false
LOG_LEVEL=INFO  # DEBUG | INFO | WARNING | ERROR | CRITICAL

# ============================================
# DATABASE
# ============================================
# PostgreSQL connection string
# Format: postgresql+psycopg2://user:password@host:port/database
DATABASE_URL=postgresql+psycopg2://postgres:postgres@localhost:5432/forex_ai

# Redis for caching and sessions
REDIS_URL=redis://localhost:6379/0

# ============================================
# SECURITY & AUTHENTICATION
# ============================================
# IMPORTANT: Change these in production!
JWT_SECRET=your-super-secret-jwt-key-min-32-chars-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=7

# ============================================
# CORS CONFIGURATION
# ============================================
# Comma-separated list of allowed origins
# Development example:
BACKEND_CORS_ORIGINS=http://localhost:3000,http://localhost:8000
# Production example:
# BACKEND_CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# ============================================
# CELERY (Background Tasks)
# ============================================
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# ============================================
# AI/LLM PROVIDER (OpenAI-Compatible)
# ============================================
# New unified configuration (recommended)
# Use any OpenAI-compatible API provider
LLM_API_KEY=your-api-key-here
LLM_MODEL=gpt-4-turbo-preview

# Optional: Custom base URL for OpenAI-compatible providers
# Leave empty or comment out to use OpenAI (default: https://api.openai.com/v1)
# LLM_BASE_URL=

# ============================================
# EXAMPLES FOR DIFFERENT PROVIDERS
# ============================================

# OpenRouter (access to multiple models)
# LLM_API_KEY=sk-or-v1-your-key
# LLM_BASE_URL=https://openrouter.ai/api/v1
# LLM_MODEL=openai/gpt-4-turbo-preview
# LLM_MODEL=anthropic/claude-3-sonnet
# LLM_MODEL=google/gemini-pro

# Together AI (fast inference)
# LLM_API_KEY=your-together-key
# LLM_BASE_URL=https://api.together.xyz/v1
# LLM_MODEL=mistralai/Mixtral-8x7B-Instruct-v0.1
# LLM_MODEL=meta-llama/Llama-2-70b-chat-hf

# Groq (ultra-fast inference)
# LLM_API_KEY=gsk_your-groq-key
# LLM_BASE_URL=https://api.groq.com/openai/v1
# LLM_MODEL=mixtral-8x7b-32768
# LLM_MODEL=llama2-70b-4096

# Local LLM (Ollama, LM Studio, etc.)
# LLM_API_KEY=not-needed
# LLM_BASE_URL=http://localhost:11434/v1
# LLM_MODEL=llama2
# LLM_MODEL=mistral

# ============================================
# LEGACY AI CONFIGURATION (Still supported)
# ============================================
# If LLM_API_KEY is not set, these will be used as fallback
# OpenAI (legacy)
# OPENAI_API_KEY=sk-your-openai-key
# OPENAI_MODEL=gpt-4-turbo-preview

# Anthropic Claude (fallback only, used when primary fails)
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key
ANTHROPIC_MODEL=claude-3-sonnet-20240229

# ============================================
# CLOUD STORAGE (Cloudflare R2)
# ============================================
# Optional: For storing trading reports, logs, etc.
R2_ACCOUNT_ID=your-cloudflare-account-id
R2_ACCESS_KEY_ID=your-r2-access-key-id
R2_SECRET_ACCESS_KEY=your-r2-secret-access-key
R2_BUCKET_NAME=forex-ai-storage

# ============================================
# RATE LIMITING
# ============================================
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_SECONDS=60

# ============================================
# TRADING CONFIGURATION
# ============================================
MAX_LOT_SIZE=10.0
MAX_POSITIONS_PER_USER=20
DEFAULT_SLIPPAGE_PIPS=2.0

# ============================================
# WEBSOCKET SETTINGS
# ============================================
WS_HEARTBEAT_INTERVAL=30
WS_CONNECTION_TIMEOUT=60

# ============================================
# NOTES
# ============================================
# 1. Never commit .env file to version control
# 2. In production, use strong random values for JWT_SECRET
# 3. At least one AI provider (OpenAI or Anthropic) is required
# 4. Update CORS origins to match your frontend domain
